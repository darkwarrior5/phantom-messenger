{
  "name": "@phantom/crypto",
  "version": "1.0.0",
  "description": "Cryptographic library for Phantom Messenger - AES-256, PFS, key exchange",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "npx tsup src/index.ts --format cjs,esm --dts",
    "dev": "npx tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:security": "vitest run --config vitest.security.config.ts",
    "lint": "eslint src/",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "files": [
    "dist"
  ],
  "license": "MIT"
}